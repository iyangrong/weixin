/**index.wxss**/
.photo {
  width: 100%;
  height: 400rpx;
}
swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  width: 100%;
  height: 400rpx;
}
.diamond {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 20px;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.diamond view {
  width: 15%;
  height: 150rpx;
}
.diamond image {
  display: block;
  width: 100rpx;
  height: 100rpx;
}
.diamond span {
  width: 100%;
  margin-left: 25%;
  font-size: 30rpx;
  color: #b9b9b9;
}
.huaju {
  width: 100%;
  height: 450rpx;
   margin-top: 20rpx;
}
.huaju h2 {
  margin-left: 20%;
  text-align: center;
}
.huaju image {
  width: 100%;
  height: 400rpx;
}
.common_layouts {
  display: flex;
  justify-content: space-between;
}
.componay_dynamics {
  width: 100%;
  height: 300rpx;
  padding: 40rpx 5%;
  box-sizing: border-box;
  border-bottom: 1px dashed #eeeeee;
  flex-direction: row;
}
.componay_dynamics image {
  width: 240rpx;
  height: 220rpx;
}
.particular {
  border-top: 1px solid #eeeeee;
}
.nuts_and_bolts {
  height: 220rpx;
  width: 55%;
  flex-direction: column;
}
.artical_title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  -webkit-line-clamp:1;
}
.artical_content {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  color: #7e7f80;
  font-size: 33rpx;
  -webkit-line-clamp:2;
}