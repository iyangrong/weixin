.diamond {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 50px;
  box-sizing: border-box;
}
.diamond view {
  width: 15%;
  height: 150rpx;
}
.diamond image {
  display: block;
  width: 100%;
  height: 100rpx;
  border-radius: 200rpx;
}
.diamond span {
  width: 100%;
  margin-left: 25%;
  font-size: 30rpx;
  color: #b9b9b9;
}
