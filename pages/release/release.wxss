/* pages/release/release.wxss */
.main {
  width: 100%;
  background-image: url('http://www.crsc.hk/Uploads/ue/image/20180719/1531986145347403.jpg');
  background-size: cover;
  z-index: -1;
}

.activity {
  width: 60%;
  height: 250rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-between;
  color: white;
}
.activity view {
  width: 39%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.activity image {
  width: 100%;
  height: 70%;
}