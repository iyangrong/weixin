/* pages/goods/goods.wxss */
.photo {
  width: 100%;
  height: 300rpx;
}
swiper {
  height: 300rpx;
  width: 100%;
}
.swiper image {
  width: 100%;
  height: 300rpx;
}
.collect {
  width: 100%;
  height: 200rpx;
  padding: 10rpx 5%;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
}
.title {
  width: 100%;
  height: 130rpx;
}
.price {
  width: 40%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.red {
  color: red;
  font-size: 50rpx;
}
.line {
  text-decoration: line-through;
}
.service {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  font-family: 'YouYuan';
  padding-left: 4%;
}
.jianjie {
  width: 100%;
  height: 500rpx;
  margin-top: 30rpx;
  padding: 30rpx 5%;
  box-sizing: border-box;
}

