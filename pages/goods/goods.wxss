/* pages/goods/goods.wxss */
.main {
  width: 100%;
  background-color: #e9e9e9;
}
.photo {
  width: 100%;
  height: 400rpx;
}
swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  width: 100%;
  height: 400rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.collect {
  width: 100%;
  padding: 50rpx 5% 10rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
  background-color: white;
  font-size: 38rpx;
}
.red {
  color: red;
}
.line {
  text-decoration: line-through;
}
.service {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 33rpx;
  padding-left: 4%;
  background-color: white;
  color: #7e7f80;
}
.jianjie {
  width: 100%;
  margin-top: 30rpx;
  padding: 30rpx 5%;
  box-sizing: border-box;
  background-color: white;
  font-size: 38rpx;
}

.date {
  width: 100%;
  height: 350rpx;
  margin-top: 30rpx;
   background-color: white;
   font-size: 38rpx;
   margin-bottom: 30rpx;
}
.date ul {
  display: block;
  width: 100%;
  height: 350rpx;
}
.date li {
  display: block;
}

.shopping_car {
  width: 100%;
   background-color: #e9e9e9;
}
.shopping_car button {
  display: inline-block;
  width: 33.33%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
}
.orange {
  background-color: #ffa500;
}
.blue {
  background-color: #00aaef;
}
.green {
  background-color: #69c3aa;
}