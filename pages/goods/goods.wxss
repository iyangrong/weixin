/* pages/goods/goods.wxss */
.main {
  width: 100%;
  height: 1610rpx;
  background-color: #e9e9e9;
}
.photo {
  width: 100%;
  height: 300rpx;
}
swiper {
  height: 300rpx;
  width: 100%;
}
.swiper image {
  width: 100%;
  height: 300rpx;
}
.collect {
  width: 100%;
  height: 200rpx;
  padding: 10rpx 5%;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
  background-color: white;
}
.title {
  width: 100%;
  height: 130rpx;
}
.price {
  width: 40%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.red {
  color: red;
  font-size: 50rpx;
}
.line {
  text-decoration: line-through;
}
.service {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  font-family: 'YouYuan';
  padding-left: 4%;
   background-color: white;
}
.jianjie {
  width: 100%;
  height: 500rpx;
  margin-top: 30rpx;
  padding: 30rpx 5%;
  box-sizing: border-box;
  font-family: 'YouYuan';
  font-weight: bold;
   background-color: white;
}

.date {
  width: 100%;
  height: 350rpx;
  margin-top: 30rpx;
  font-weight: bold;
   background-color: white;
}
.date ul {
  display: block;
  width: 100%;
  height: 350rpx;
}
.date li {
  display: block;
}

.shopping_car {
  width: 100%;
  height: 100rpx;
   background-color: white;
}
.shopping_car button {
  display: inline-block;
  width: 33.33%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
}
.orange {
  background-color: #ffa500;
}
.blue {
  background-color: #00aaef;
}
.green {
  background-color: #69c3aa;
}