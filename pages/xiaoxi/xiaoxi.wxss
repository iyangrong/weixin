/* pages/xiaoxi/xiaoxi.wxss */
.main {
  width: 100%;
  background-color: #f5f6f7;
}
ul {
  display: block;
  width: 100%;
  background-color: white;
}
li {
  display: flex;
  width: 100%;
  height: 300rpx;
  padding: 30rpx 5%;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f3f5;
  justify-content: space-between;
}
li image {
  width: 30%;
  height: 240rpx;
}
.details {
  width: 67%;
  height: 240rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.title {
  font-size: 33rpx;
  font-weight: bold;
}
.price {
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.red {
  color: red;
}
.number {
  width: 60%;
  display: flex;
  justify-content: space-between;
}
.btn {
  width: 60%;
  height: 80%;
  display: flex;
  flex-direction: row;
  padding-top: 5%;
  box-sizing: border-box;
}
.sub, .add, .num {
  width: 40%;
  height: 60rpx;
  border: 1px solid #d8d8d8;
  line-height: 60rpx;
  text-align: center;
}
.del {
  width: 30%;
  height: 60rpx;
  margin-top: 25rpx;
}
.addgoods {
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  padding-left: 20%;
  box-sizing: border-box;
  color: #adadad;
  background-color: white;
}
.overbooking {
  width: 100%;
  height: 130rpx;
  margin-top: 200rpx;
  display: flex;
  justify-content: space-between;
  line-height: 130rpx;
  background-color: white;
  border-bottom: 1px solid #f3f3f5; 
  padding-left: 5%;
  padding-right: 5%;
  box-sizing: border-box;
}
.btn_overbook {
  height: 70rpx;
  width: 25%;
  margin-top: 35rpx;
  margin-right: 0;
  font-size: 30rpx;
  background-color: #ff7e3a;
  border: 1px solid #ff7e3a;
  color: white;
}