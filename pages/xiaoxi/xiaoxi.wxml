<!--pages/xiaoxi/xiaoxi.wxml-->
<view class="main">
<ul>

<li wx:for="{{goods}}" >
<image src="{{item.imgUrl}}" />
<view class="details">
<text class="title">{{item.title}}</text>
<view class="price">
<text class="red">￥{{item.price}}</text>
<view class="number">
<view class="btn">
<view class="sub" bindtap="sub1(index)">-</view><view class="num">{{item.num}}</view><view class="add" bindtap="add1(index)">+</view>
</view>
<image class="del" src="https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=2452642529,1293660602&fm=26&gp=0.jpg" />
</view>
</view>
</view>
</li>

</ul>

<view class="addgoods">
还差<text class="red">￥100.00</text>元包邮，前往凑单
</view>

<view class="overbooking">
<text>总价 <text class="red">￥{{total}}元</text></text>
<button bindtap="go_to_pay" class="btn_overbook">下单</button>
</view>

</view>