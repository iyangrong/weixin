.main {
  width: 100%;
  border: 1px solid #eeeeee;
  padding: 30rpx 5%;
  box-sizing: border-box;
}
.title {
  font-weight: bold;
  display: block;
  text-align: center;
  font-family: Microsoft YaHei;
  letter-spacing: 0.8px ;
  font-size: 35rpx;
}
.time {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #979899;
  font-size: 30rpx;
  border-bottom: 1px dashed #eeeeee;
  margin-bottom: 20rpx;
}
.article {
  font-size: 35rpx; 
}