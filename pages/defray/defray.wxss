/* pages/defray/defray.wxss */
.main {
  width: 100%;
  background-color:#f5f6f7;                                         
}
.information {
  width: 100%;
  height: 170rpx;
  padding: 20rpx 5%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  font-size: 35rpx;
  margin-bottom: 20rpx;
  background-color: white;
}
.product_details {
  width: 100%;
  height: 250rpx;
  padding-top: 30rpx;
  font-size: 37rpx;
  position: relative;
  margin-bottom: 20rpx;
  background-color: white;
}
.grey_line {
  background-color: #e5e5e5;
  width: 100%;
  height: 7rpx;
  display: inline-block;
  position: absolute;
  top: 100rpx;
}
.merchandise {
  position: absolute;
  left: 2%;
}
.amount {
  position: absolute;
  left: 50%;
}
.total-price {
   position: absolute;
   left: 80%;
}
.three_cups {
  top: 200rpx;
}
.two_cups {
  top: 130rpx;
}
.fill_in_notes {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  color: #808080;
  padding-left: 3%;
  background-color: white;
}
.overbooking {
  width: 100%;
  height: 130rpx;
  margin-top: 450rpx;
  display: flex;
  justify-content: space-between;
  line-height: 130rpx;
  background-color: white;
  border-bottom: 1px solid #f3f3f5; 
  padding-left: 5%;
  padding-right: 5%;
  box-sizing: border-box;
}
.btn_overbook {
  height: 70rpx;
  width: 30%;
  margin-top: 35rpx;
  margin-right: 0;
  font-size: 30rpx;
  background-color: #ff7e3a;
  border: 1px solid #ff7e3a;
  color: white;
}
.red {
  color: red;
}