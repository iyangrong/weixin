/* pages/defray/defray.wxss */
.main {
  width: 100%;
  background-color:#f5f6f7;                                         
}
.information {
  width: 100%;
  height: 220rpx;
  padding: 20rpx 5%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  font-size: 35rpx;
  margin-bottom: 20rpx;
  background-color: white;
}
.product_details {
  display: block;
  list-style: none;
  width: 100%;
  font-size: 37rpx;
  margin-bottom: 20rpx;
}
.product_details li {
  width: 100%;
  height: 100rpx;
  padding: 20rpx 5%;
  box-sizing: border-box;
  display: flex;
  background-color: white;
  justify-content: space-between;
}
.product_details_spe {
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
}
.not_exceed {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.grey_line {
  background-color: #e5e5e5;
  width: 100%;
  height: 7rpx;
  display: inline-block;
  position: absolute;
  top: 100rpx;
}

.overbooking {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  line-height: 130rpx;
  background-color: white;
  border-bottom: 1px solid #f3f3f5; 
  padding-left: 5%;
  padding-right: 5%;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
}
.btn_overbook {
  height: 70rpx;
  width: 30%;
  margin-top: 35rpx;
  margin-right: 0;
  font-size: 30rpx;
  background-color: #ff7e3a;
  border: 1px solid #ff7e3a;
  color: white;
}
.red {
  color: red;
}