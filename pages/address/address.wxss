/* pages/address/address.wxss */
.main {
  width: 100%;
  background-color: #f3f3f3;
}
.add_address {
  width: 100%;
  height: 120rpx;
  line-height: 60rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 5%;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.add_address_img {
  width: 60rpx;
  height: 60rpx;
}
.myaddress {
  color: #424242;
  font-size: 40rpx;
}
.addaddress {
  color: #424242;
  font-size: 30rpx;
}
ul {
  display: block;
  width: 100%;
  background-color: white;
}
ul li {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 30rpx;
  list-style: none;
  padding-left: 5%;
  padding-right: 5%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.address_middle {
  width:5rpx;
  height: 50rpx;
  background-color: #efefef;
  margin-top: 25rpx;
}
.address_right {
  color: #9c9c9c;
  font-size: 30rpx;
}
.address_left {
  width: 80%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.address_left_image {
  width: 70rpx;
  height: 70rpx;
  margin-top: 15rpx;
  background-color: #babcbe;
  color: white;
  line-height: 70rpx;
  text-align: center;
  border-radius: 70rpx;
}
.address_left_right {
  width: 80%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}
.info {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}