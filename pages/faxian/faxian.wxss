/* pages/faxian/faxian.wxss */
.main {
  width: 100%;
}
ul {
  display: block;
  list-style: none;
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}
ul li {
  display: block;
  height: 200rpx;
  width: 100%;
  margin-bottom: 50rpx;
  background-color: white;
  border-radius: 10rpx;
}
.whole {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.title {
  font-size: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
li image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.red {
  color: #7e7f80;
  font-size: 35rpx;
}
.line {
  text-decoration: line-through;
}
.content_details {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-top: 3%;
  padding-bottom: 3%;
  box-sizing: border-box;
}