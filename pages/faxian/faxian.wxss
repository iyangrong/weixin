/* pages/faxian/faxian.wxss */
h2 {
  font-weight: bold;
  display: block;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
}
ul {
  display: block;
  list-style: none;
  width: 100%;
  height: 2500rpx;
}
ul li {
  display: block;
  height: 500rpx;
  width: 100%;
  margin-bottom: 50rpx;
}
.title {
  font-size: 42rpx;
}
li image {
  width: 100%;
  height: 350rpx;
}
li .discount {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
li .price {
  width: 30%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
}
.red {
  color: red;
  font-size: 50rpx;
}
.line {
  text-decoration: line-through;
}