/* pages/xiaoxi/xiaoxi.wxss */
.main {
  width: 100%;
  /*background-color: #f5f6f7;*/
}
ul {
  display: block;
  width: 100%;
  background-color: white;
}
li {
  display: flex;
  width: 100%;
  height: 300rpx;
  padding: 30rpx 5%;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f3f5;
  justify-content: space-between;
}
li image {
  width: 30%;
  height: 240rpx;
}
.details {
  width: 67%;
  height: 240rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.title {
  font-size: 33rpx;
  font-weight: bold;
  display: -webkit-box;
 word-break: break-all;
 text-overflow: ellipsis;
 overflow: hidden;
 -webkit-box-orient: vertical;
 -webkit-line-clamp:2;
}
.price {
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.red {
  color: red;
  font-size: 33rpx;
}
.number {
  width: 60%;
  display: flex;
  justify-content: space-between;
}
.btn {
  width: 60%;
  height: 80%;
  display: flex;
  flex-direction: row;
  padding-top: 5%;
  box-sizing: border-box;
  font-size: 33rpx;
}
.sub, .add, .num {
  width: 40%;
  height: 60rpx;
  border: 1px solid #d8d8d8;
  line-height: 60rpx;
  text-align: center;
}
.del {
  width: 30%;
  height: 60rpx;
  margin-top: 25rpx;
}
.overbooking {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  line-height: 130rpx;
  background-color: white;
  border-bottom: 1px solid #f3f3f5; 
  padding-left: 5%;
  padding-right: 5%;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  font-size: 33rpx;
}
.btn_overbook {
  height: 70rpx;
  width: 25%;
  margin-top: 35rpx;
  margin-right: 0;
  font-size: 30rpx;
  background-color: #ff7e3a;
  border: 1px solid #ff7e3a;
  color: white;
}

.shopCar {
  width: 60%;
  height: 400rpx;
  position: absolute;
  top: 150rpx;
  left: 20%;
}

.shopCarImage {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  margin: 0 auto 50rpx;
}

.shopCarWord {
  color: #787879;
  text-align: center;
  margin: 0 auto 20rpx;
  display: block;
}

.shopCarButton {
  background-color: white;
  width: 50%;
  color: #636871;
  font-size: 30rpx;
}